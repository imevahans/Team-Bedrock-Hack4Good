{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"  // The directory to output the built files
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"  // This ensures Vercel serves your single-page app correctly
    }
  ]
}
